package utilisateur;

import java.sql.Connection;
import java.sql.DriverManager;

public class ConnexionDB {
	
	Connection connection;
	
	public ConnexionDB() {
		
	}
	
	public Connection getConnection() {
	    try {
	        Class.forName("org.postgresql.Driver");
	        connection = null;
	        connection = DriverManager.getConnection(
	           "jdbc:postgresql://localhost:5432/SOIPL","postgres", "azerty1.");
	        	//TODO changer le mdp de louis => voir si on peut mettre autrement
	        	// mais pas le mdp de session mais le mdp de la base SQL en fait.
	        	//"jdbc:postgresql://172.:5432/SOIPL","dblbokiau17", "mdp");
	        	//"jdbc:postgresql://localhost:5432/SOIPL","dbrhonore16", "mdp");
	    }
	    catch(Exception e) {
	        System.out.println(e);

	    }
	    return connection;
	}
	
}
